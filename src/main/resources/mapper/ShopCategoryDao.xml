<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.maxlv.shop.dao.ShopCategoryDao">
    <select id="queryShopCategory" resultType="org.maxlv.shop.entity.ShopCategory">
		SELECT
           *
		FROM
		tb_shop_category
		<where>
            <if test="shopCategoryCondition.shopCategoryId!=null">
                and parent_id is null
            </if>
            <if test="shopCategoryCondition.shopCategoryDesc!=null">
                and parent_id is not null
            </if>
            <if test="shopCategoryCondition.parentId!=null">
                and parent_id = #{shopCategoryCondition1.parent.shopCategoryId}
            </if>
        </where>
        ORDER BY
		priority DESC;
	</select>

</mapper>